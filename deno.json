{
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "start": "deno run -A --watch=static/,routes/ dev.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update .",
    "indexing": "deno run -A indexing.ts",
    "esm:add": "deno run -A https://esm.sh/v130 add",
    "esm:update": "deno run -A https://esm.sh/v130 update",
    "esm:remove": "deno run -A https://esm.sh/v130 remove"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lock": false,
  "fmt": {
    "exclude": [
      "data/markdowns/"
    ]
  },
  "imports": {
    "@/": "./",
    "$std/": "https://deno.land/std@0.191.0/",
    "$mock_file/": "https://deno.land/x/mock_file@v1.1.2/",
    "$og_edge/": "https://deno.land/x/og_edge@0.0.6/",
    "$sqlite/": "https://deno.land/x/sqlite@v3.7.2/",
    "@orama/orama": "https://esm.sh/v130/@orama/orama@1.0.6",
    "@orama/orama/": "https://esm.sh/v130/@orama/orama@1.0.6/",
    "@orama/plugin-data-persistence": "https://esm.sh/v130/*@orama/plugin-data-persistence@1.0.6",
    "@orama/plugin-data-persistence/": "https://esm.sh/v130/*@orama/plugin-data-persistence@1.0.6/",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
    "dpack": "https://esm.sh/v130/dpack@0.6.22",
    "feed": "https://esm.sh/v130/*feed@4.2.2",
    "marked": "https://esm.sh/v130/marked@5.0.5",
    "marked/": "https://esm.sh/v130/marked@5.0.5/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.0",
    "preact": "https://esm.sh/preact@10.15.1",
    "preact/": "https://esm.sh/preact@10.15.1/",
    "printd": "https://esm.sh/v130/printd@1.6.0",
    "schema-dts": "https://esm.sh/v130/*schema-dts@1.1.2",
    "$fresh/": "https://raw.githubusercontent.com/denoland/fresh/7ebaf0404d6d065e1249f663504ae04f453c2dd8/"
  },
  "scopes": {
    "https://deno.land/x/og_edge@0.0.6/": {
      "https://esm.sh/react@18.2.0": "https://esm.sh/preact@10.14.1/compat"
    },
    "https://esm.sh/v130/": {
      "@msgpack/msgpack": "https://esm.sh/v130/@msgpack/msgpack@2.8.0",
      "pretty-format": "https://esm.sh/v130/pretty-format@3.8.0",
      "xml-js": "https://esm.sh/v130/xml-js@1.6.11"
    }
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  }
}
