{
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "preview": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "indexing": "deno run -A indexing.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["vite/client"]
  },
  "lint": {
    "rules": { "tags": ["fresh", "recommended", "react", "jsr"] },
    "plugins": ["jsr:@ayk/lint-import-order"]
  },
  "imports": {
    "~/": "./",
    "$canvas": "https://deno.land/x/canvas@v1.4.2/mod.ts",
    "$mock_file": "https://deno.land/x/mock_file@v1.1.2/mod.ts",
    "$sqlite": "https://deno.land/x/sqlite@v3.8/mod.ts",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.4",
    "@giscus/react": "npm:@giscus/react@^3.1.0",
    "@hyzyla/pdfium": "npm:@hyzyla/pdfium@^2.1.9",
    "@orama/orama": "npm:@orama/orama@^2.1.1",
    "@orama/plugin-data-persistence": "npm:@orama/plugin-data-persistence@^2.1.1",
    "@preact/signals": "npm:@preact/signals@^2.3.1",
    "@std/http": "jsr:@std/http@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.13",
    "@vercel/og": "npm:@vercel/og@^0.8.5",
    "clsx": "npm:clsx@^2.1.1",
    "daisyui": "npm:daisyui@^5.1.13",
    "dpack": "npm:dpack@^0.6.22",
    "feed": "npm:feed@^5.1.0",
    "fresh": "jsr:@fresh/core@^2.1.0",
    "github-slugger": "npm:github-slugger@^2.0.0",
    "marked": "npm:marked@^16.3.0",
    "postcss": "npm:postcss@^8.5.6",
    "preact": "npm:preact@^10.27.2",
    "sitemap": "npm:sitemap@^8.0.0",
    "tailwindcss": "npm:tailwindcss@^4.1.13",
    "vite": "npm:vite@^7.1.6",
    "vite-plugin-pwa": "npm:vite-plugin-pwa@^1.0.3",
    "vite-plugin-static-copy": "npm:vite-plugin-static-copy@^3.1.2",
    "zod": "npm:zod@^4.1.9"
  },
  "nodeModulesDir": "auto",
  "exclude": ["**/_fresh/*", "data"],
  "unstable": ["kv"]
}
